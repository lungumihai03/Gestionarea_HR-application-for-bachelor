<Page
    x:Class="Gestionarea_HR.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20" Spacing="15">
        <TextBlock Text="Setări Aplicație" FontSize="24" FontWeight="Bold" />

        <TextBlock Text="Scutire personala (Lei)"/>
        <TextBox x:Name="PersonalExemptionTextBox"  />
        <TextBlock Text="Scutire pentru copii (Lei)"/>
        <TextBox x:Name="ChildExemptionTextBox"  />
        <TextBlock Text="Impozit pe venit (%)"/>
        <TextBox x:Name="IncomeTaxTextBox"  />
        <TextBlock Text="Impozit pe medicina (%)"/>
        <TextBox x:Name="HealthTaxTextBox"  />

        <Button Content="Salvează Setările" Click="SaveSettingsButton_Click" HorizontalAlignment="Right" />

        <TextBlock Text="Developed by Mihai Lungu"
                   HorizontalAlignment="Center"
                   Margin="10,30,10,0"
                   FontSize="14"
                   FontStyle="Italic"
                   Opacity="0.7"/>
    </StackPanel>
</Page>
