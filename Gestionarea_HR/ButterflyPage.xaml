<Page
    x:Class="Gestionarea_HR.ButterflyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gestionarea_HR"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nume:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="textBox_nume" Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Prenume:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="textBox_prenume" Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Lună:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="comboBox_month" Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="An:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="comboBox_year" Grid.Row="3" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,5"/>

        <Button x:Name="button_do" Grid.Row="4" Grid.Column="1" Content="Calculează" Click="button_do_Click" HorizontalAlignment="Left" Margin="0,10"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Salar net:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_SN" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Salar brut:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_SB" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="SP:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_SP" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="SC:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_SC" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="9" Grid.Column="0" Text="ST:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_ST" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="10" Grid.Column="0" Text="Asigurare medicală:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_MED" Grid.Row="10" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="11" Grid.Column="0" Text="Impozit pe venit:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_IV" Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="12" Grid.Column="0" Text="Total contribuții:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_TCS" Grid.Row="12" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>

        <TextBlock Grid.Row="13" Grid.Column="0" Text="Salar bază:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBlock x:Name="label_salary" Grid.Row="13" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>
        <Button x:Name="button_export" Grid.Row="14" Grid.Column="1" Content="Exportă Fluturaș" Click="button_export_Click" HorizontalAlignment="Left" Margin="0,10" IsEnabled="False"/>
    </Grid>
</Page>