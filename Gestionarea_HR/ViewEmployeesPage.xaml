<Page
    x:Class="Gestionarea_HR.ViewEmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls">
    <StackPanel Padding="20" Spacing="15">
        <TextBlock Text="Căutare Angajați" FontSize="20" FontWeight="Bold" />
        <TextBox x:Name="SearchTextBox" PlaceholderText="Caută după nume..." TextChanged="SearchTextBox_TextChanged"/>
        <CheckBox x:Name="CheckBoxFaildate" Content="Angajati concediati" Checked="CheckBoxFaildate_Checked" Unchecked="CheckBoxFaildate_Checked"/>
        <controls:DataGrid x:Name="EmployeeDataGrid" AutoGenerateColumns="False" MinHeight="200">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" />
                <controls:DataGridTextColumn Header="Nume" Binding="{Binding Name3}" />
                <controls:DataGridTextColumn Header="Prenume" Binding="{Binding Name1}" />
                <controls:DataGridTextColumn Header="Patronimic" Binding="{Binding Name2}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
     
    </StackPanel>
</Page>