<Page
    x:Class="Gestionarea_HR.EmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,10,10"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="20">
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
            <!-- Labels and Text Fields -->
            <TextBlock Text="Employee ID" Grid.Column="0" Grid.Row="0"/>
            <TextBox x:Name="EmployeeIDTextBox" Grid.Column="1" Grid.Row="0" IsReadOnly="True" Tag="EmployeeIDTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Nume" Grid.Column="0" Grid.Row="1"/>
            <TextBox x:Name="Name1TextBox" Grid.Column="1" Grid.Row="1" Tag="Name1TextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Prenume" Grid.Column="0" Grid.Row="2"/>
            <TextBox x:Name="Name2TextBox" Grid.Column="1" Grid.Row="2" Margin="0,5,0,5"/>

            <TextBlock Text="Patronimic" Grid.Column="0" Grid.Row="3"/>
            <TextBox x:Name="Name3TextBox" Grid.Column="1" Grid.Row="3" Margin="0,5,0,5"/>

            <TextBlock Text="Număr Telefon" Grid.Column="0" Grid.Row="4"/>
            <TextBox x:Name="PhoneTextBox" Grid.Column="1" Grid.Row="4" Margin="0,5,0,5"/>

            <TextBlock Text="Data Naștere" Grid.Column="0" Grid.Row="5"/>
            <DatePicker x:Name="BirthDatePicker" Grid.Column="1" Grid.Row="5" Margin="0,5,0,5"/>

            <TextBlock Text="Data Angajare" Grid.Column="0" Grid.Row="6"/>
            <DatePicker x:Name="HireDatePicker" Grid.Column="1" Grid.Row="6" Margin="0,5,0,5"/>

            <TextBlock Text="Data Demisie" Grid.Column="0" Grid.Row="7"/>
            <DatePicker x:Name="FailDatePicker" Grid.Column="1" Grid.Row="7" Margin="0,5,0,5"/>

            <TextBlock Text="Specialitate" Grid.Column="0" Grid.Row="8"/>
            <ComboBox x:Name="SpecialityComboBox" Grid.Column="1" Grid.Row="8" SelectionChanged="SpecialityComboBox_SelectionChanged" Margin="0,5,0,5"/>

            <TextBlock Text="Salariu" Grid.Column="0" Grid.Row="9"/>
            <TextBox x:Name="SalaryTextBox" Grid.Column="1" Grid.Row="9" Margin="0,5,0,5"/>

            <TextBlock Text="Nivel Educație" Grid.Column="0" Grid.Row="10"/>
            <ComboBox x:Name="EducationComboBox" Grid.Column="1" Grid.Row="10" SelectionChanged="EducationComboBox_SelectionChanged" Margin="0,5,0,5"/>

            <TextBlock Text="Număr Copii" Grid.Column="0" Grid.Row="11"/>
            <TextBox x:Name="ChildrenTextBox" Grid.Column="1" Grid.Row="11" Tag="ChildrenTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Stare Civilă" Grid.Column="0" Grid.Row="12"/>
            <TextBox x:Name="MarriedTextBox" Grid.Column="1" Grid.Row="12" Margin="0,5,0,5"/>

            <TextBlock Text="Departament" Grid.Column="0" Grid.Row="13"/>
            <ComboBox x:Name="DepartComboBox" Grid.Column="1" Grid.Row="13" SelectionChanged="DepartComboBox_SelectionChanged" Margin="0,5,0,5"/>

            <TextBlock Text="Contract" Grid.Column="0" Grid.Row="14"/>
            <TextBox x:Name="ContractTextBox" Grid.Column="1" Grid.Row="14" Margin="0,5,0,5"/>

            <TextBlock Text="Data Contractului" Grid.Column="0" Grid.Row="15"/>
            <DatePicker x:Name="ContractDatePicker" Grid.Column="1" Grid.Row="15" Margin="0,5,0,5"/>

            <TextBlock Text="IDNP" Grid.Column="0" Grid.Row="16"/>
            <TextBox x:Name="IDNPTextBox" Grid.Column="1" Grid.Row="16" Margin="0,5,0,5"/>

            <TextBlock Text="CPAS" Grid.Column="0" Grid.Row="17"/>
            <TextBox x:Name="CPASTextBox" Grid.Column="1" Grid.Row="17" Margin="0,5,0,5"/>

            <StackPanel Grid.ColumnSpan="2" Grid.Row="18" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="CreateButton" Content="Crează" Click="CreateButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
