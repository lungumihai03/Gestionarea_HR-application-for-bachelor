<Page x:Class="Gestionarea_HR.FisaAngajat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      >

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,10,10"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="20">
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
            <TextBlock Text="Angajat" Grid.Column="0" Grid.Row="0"/>
            <ComboBox x:Name="employeeComboBox" Grid.Column="1" Grid.Row="0" SelectionChanged="EmployeeComboBox_SelectionChanged" Margin="0,5,0,5" />

            <TextBlock Text="Employee ID" Grid.Column="0" Grid.Row="1"/>
            <TextBox x:Name="EmployeeIDTextBox" Grid.Column="1" Grid.Row="1" IsReadOnly="True" Tag="EmployeeIDTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Nume" Grid.Column="0" Grid.Row="2"/>
            <TextBox x:Name="Name1TextBox" Grid.Column="1" Grid.Row="2" IsReadOnly="True" Tag="Name1TextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Prenume" Grid.Column="0" Grid.Row="3"/>
            <TextBox x:Name="Name3TextBox" Grid.Column="1" Grid.Row="3" IsReadOnly="True" Tag="Name3TextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Nume de familie" Grid.Column="0" Grid.Row="4"/>
            <TextBox x:Name="Name2TextBox" Grid.Column="1" Grid.Row="4" IsReadOnly="True" Tag="Name2TextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Telefon" Grid.Column="0" Grid.Row="5"/>
            <TextBox x:Name="PhoneTextBox" Grid.Column="1" Grid.Row="5" IsReadOnly="True" Tag="PhoneTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Data nașterii" Grid.Column="0" Grid.Row="6"/>
            <DatePicker x:Name="BirthDatePicker" Grid.Column="1" Grid.Row="6" IsEnabled="False"  Tag="BirthDatePicker" Margin="0,5,0,5"/>

            <TextBlock Text="Salariul" Grid.Column="0" Grid.Row="7"/>
            <TextBox x:Name="SalaryTextBox" Grid.Column="1" Grid.Row="7" IsReadOnly="True" Tag="SalaryTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Educatie" Grid.Column="0" Grid.Row="8"/>
            <ComboBox x:Name="EducationComboBox" Grid.Column="1" Grid.Row="8" IsEnabled="False" Tag="EducationComboBox" Margin="0,5,0,5"/>

            <TextBlock Text="Copii" Grid.Column="0" Grid.Row="9"/>
            <TextBox x:Name="ChildrenTextBox" Grid.Column="1" Grid.Row="9" IsReadOnly="True" Tag="ChildrenTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="Căsătorit" Grid.Column="0" Grid.Row="10"/>
            <TextBox x:Name="MarriedTextBox" Grid.Column="1" Grid.Row="10" IsReadOnly="True" Tag="MarriedComboBox" Margin="0,5,0,5"/>

            <TextBlock Text="Departament" Grid.Column="0" Grid.Row="12"/>
            <ComboBox x:Name="DepartmentComboBox" Grid.Column="1" Grid.Row="12" IsEnabled="False"  Tag="DepartmentComboBox" Margin="0,5,0,5"/>

            <TextBlock Text="CNP" Grid.Column="0" Grid.Row="13"/>
            <TextBox x:Name="CNPTextBox" Grid.Column="1" Grid.Row="13" IsReadOnly="True" Tag="CNPTextBox" Margin="0,5,0,5"/>

            <TextBlock Text="CPAS" Grid.Column="0" Grid.Row="14"/>
            <TextBox x:Name="CPASTextBox" Grid.Column="1" Grid.Row="14" IsReadOnly="True" Tag="CPASTextBox" Margin="0,5,0,5"/>

            <StackPanel Grid.ColumnSpan="2" Grid.Row="16" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="EditButton" Content="Editează" Click="EditButton_Click" IsEnabled="False" />
                
                <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
